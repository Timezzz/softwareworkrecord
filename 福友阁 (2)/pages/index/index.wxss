/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

/* 搜索 */
.search {
  height: 40px;
  text-align: center;
  margin-bottom: 20px;
}

.search input {
  height: 40px;
  width: 90%;
  margin: 0 auto;
  border-radius: 20px;
  background-color: #f0f9f6;
  font-size: 14px;
}

/* 导航 */
.nav {
  width: 90%;
  height: 35px;
  margin: 0 auto;
}

.nav li {
  float: left;
  width: 30%;
}

#nav_1,
#nav_2 {
  margin-right: 5%;
}

.nav ul li button {
  width: 100%;
  height: 35px;
  border-radius: 10px 10px 0 0;
  background-color: #588c7e;
  color: #f0f9f6;
  font-size: 14px;
  font-weight: 400;
}

#nav_1 button {
  background-color: #f0f9f6;
  color: #588c7e;
}

/* tag选择 */
.select {
  height: 80rpx;
  width: 90%;
  background-color: #f0f9f6;
  margin: 0 auto;
  overflow-x: scroll;
  white-space: nowrap;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tag {
  height: 74rpx;
  padding: 0 35rpx;
  display: inline-block;
  line-height: 74rpx;
  font-size: 12px;
  text-align: center;
  color: #97c2b5;
}

.active {
  color: #588c7e;
  border-bottom: 2px solid #588c7e;
}

/* 内容 */
.content {
  width: 90%;
  margin: 0 auto;
}

.activity {
  height: 175rpx;
  background-color: #f0f9f6;
  padding-top: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 5px 5px 5px rgba(81, 81, 81, 0.321);
}

.activity .head {
  float: left;
  height: 80rpx;
  width: 80rpx;
  border-radius: 40rpx;
  background-color: #588c7e;
}

.activity .join {
  float: left;
  height: 60rpx;
  width: 120rpx;
  border-radius: 30rpx;
  background-color: #588c7e;
  line-height: 60rpx;
  color: #f0f9f6;
  text-align: center;
  font-size: 12px;
  margin-top: 10rpx;
}

.title {
  height: 80rpx;
  width: 560rpx;
  margin: 0 auto;
  font-size: 20px;
  color: #588c7e;
}

.intro {
  height: 56rpx;
  width: 560rpx;
  margin: 0 auto;
  margin-top: 20rpx;
  color: #588c7e;
  line-height: 28rpx;
  font-size: 24rpx;
  word-break: break-all;
  overflow: hidden;
}

.tags li {
  float: left;
  margin-right: 15rpx;
}

.tags li view {
  height: 40rpx;
  padding: 0 20rpx;
  border-radius: 20rpx;
  border: #588c7e solid 1.5px;
  line-height: 40rpx;
  font-size: 25rpx;
}

.publish {
  position: fixed;
  bottom: 50rpx;
  right: 35rpx;
  height: 80rpx;
  width: 80rpx;
  background-color: #588c7e;
  color:#f0f9f6;
  border-radius: 40rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 50rpx;
}